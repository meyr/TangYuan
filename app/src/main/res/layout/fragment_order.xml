<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/inout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/indoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/indoor_chinese" />

            <RadioButton
                android:id="@+id/takeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/takeout_chinese" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sian_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鹹湯圓"
                android:layout_weight="1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sian_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大"
                android:layout_weight="1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sian_big_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sian_big_pls_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:layout_weight="1"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/sian_big_mns_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="－"
                android:layout_weight="1"
                android:textSize="20dp"/>
            　　　　
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sian_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鹹湯圓"
                android:visibility="invisible"
                android:layout_weight="1"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/sian_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sian_big"
                android:layout_weight="1"
                android:text="小"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sian_small_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sian_small_pls_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="＋"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sian_small_mns_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="－"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="add" />

</RelativeLayout>